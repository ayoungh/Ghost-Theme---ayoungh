{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


{{! The big featured header on the homepage, with the site logo and description }}
<header class="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div class="site-head-content inner">
            <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{else}}
                    <span class="blog-title">{{@blog.title}}</span>
                {{/if}}
            </a>
        </div>
    </div>
</header>

<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

            <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{tags prefix="on " separator=" | "}}</span>

            <h1 class="post-title">{{{title}}}</h1>

            <section class="post-content">
                {{content}}
            </section>

            <section class="tags">
                <span class='label'>Tagged as:</span>
                {{tags separator=" | "}}
            </section>

            <footer class="post-footer">

                <section class="author">
                    <div class="profile_image">
                        <img src="{{author.image}}" alt="{{author.name}}"/>
                    </div>    
                    <div class="profile_details">
                        <h4>{{author.name}}</h4>
                        <p>{{author.bio}}</p>
                        <span class="email"></span>
                    </div>
                </section>

                <section class="share">
                    <h4>Share this post</h4>

                    <div class="social-icons">
                        <ul>
                            <li class="twitter">
                                <a href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <span class="hidden">Twitter</span>
                                </a> 
                            </li>

                            <li class="facebook">
                                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <span class="hidden">Facebook</span>
                                </a>
                            </li>

                            <li class="googleplus">
                                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <span class="hidden">Google+</span>
                                </a>
                            </li>

                        </ul>
                    </div>        

                </section>

            </footer>

        {{/post}}

    </article>

</main>